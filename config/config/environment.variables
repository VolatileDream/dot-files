source ~/.selected_editor
export TERMINAL=tabbed-alacritty
export EDITOR=$SELECTED_EDITOR
export BROWSER=w3m
export PAGER="less"
export LESS="--HILITE-UNREAD --RAW-CONTROL-CHARS"

# by default we use this directory for the pass(2) store.
# See .config/bash/40-pass for how this is manipulated.
# hint: it's a symbolic link.
export PASSWORD_STORE_DIR="$HOME/passwords"

export PATH="$HOME/bin:$HOME/workbench/bin:$HOME/.cargo/bin:$PATH"
