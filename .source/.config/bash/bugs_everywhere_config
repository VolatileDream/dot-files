function be-all(){
	be list --status=all
}
function be-add(){
	if [ $# -lt 1 ]; then
		echo "usage: be-add <new item name> [tags ...]"
		return 1
	fi
	name="$1"; shift
	id=` be new "$name" | grep -Eo 'ID .+$' | awk '{ print $2 }' `
	be tag "$id" "$@"
}
function be-show(){
	# given a list from be-all, display the list with 'be show'
	awk -F : '{ print $1 }' |
	 while read line ; do
		hr
		be show "$line"
	 done
}
