[push]
	default = simple
  recurseSubmodules = check
[grep]
	lineNumber = true
[alias]
	graph = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[fetch]
	recurseSubmodules = yes
[submodule]
	recurse = true
[diff]
	submodule = log
[init]
	defaultBranch = main
